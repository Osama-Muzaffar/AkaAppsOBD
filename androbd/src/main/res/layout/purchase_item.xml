<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160sp"
    android:id="@+id/maincontraint"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/purchasebanner"
    android:backgroundTint="@color/main_purple"
    android:orientation="vertical"
    android:layout_marginVertical="10sp"
    android:layout_marginHorizontal="5sp"
    android:paddingHorizontal="5sp"
    >


    <RelativeLayout
        android:id="@+id/checkrelative"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginTop="10sp"
        android:backgroundTint="@color/main_purple"
        android:background="@drawable/full_circle_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/checkimg"
            android:layout_width="12sp"
            android:layout_height="12sp"
            android:src="@drawable/baseline_check_24"
            android:layout_centerInParent="true"
            app:tint="@color/Red"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Ads"
        android:textColor="@color/inapp_yellow"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toBottomOf="@+id/checkrelative"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rs 550.00 / Per Month"
        android:textColor="@color/white"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/white"
        android:layout_marginTop="5sp"
        app:layout_constraintTop_toBottomOf="@+id/price"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="5sp"
        android:textSize="9sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>